<%= form_for(@topic) do |f| %>
  <fieldset>
    <legend><%= @topic.id.blank? ? "新建帖子" : "修改帖子" %></legend>
    <%= render "shared/error_messages", :target => @topic %>  
    <div class="clearfix">
      <%= f.label :title %>
      <div class="input">
        <span class="span3"<%= " style=display:none;" if !@node.blank? %>><%= f.select :node_id, Node.recent.collect { |n| [n.name,n.id] },{}, :style => "width:140px;" %></span>
        <span class="span7">
          <%= f.text_field :title, :style => "width:300px" %>
        </span>
      </div>
    </div>
     <div class="edit_tools">
         <%= link_to("上传图片", "#", :onclick => "return Topics.addImageClick();", :id => "add_image")%>
        </div>
    <div class="clearfix">
      <%= f.label :body %>
      <div class="input">
        <%= f.text_area :body, :class => "topic_body_text_area xxlarge", :style => "height:400px" %>
      </div>
    </div>
    <div class="actions">
      <input type="submit" value="保存" class="btn primary"> 
      <%= link_to("取消", @topic.id.blank? ? root_path : topic_path(@topic), :class => "btn")%>
    </div>
  </fieldset>
<% end %>
