<% content_for :sitemap do %>
  <li class="active">提醒</li>
<% end %>
<%= content_for :styles do %>
  <%= stylesheet_link_tag "notifications" %>
<% end %>
<%= content_for :scripts do %>
  <%= javascript_include_tag "notifications" %>
<% end %>

<div class="sidebar">
  <div class="box">
    <div class="content">
      <%= button_to '标记所有为已读', mark_all_as_read_notifications_path, :class => 'btn', :method => :put %>
    </div>
  </div>
</div>

<div class="content">
  <div id="notifications" class="box">
    <h1>提醒</h1>
    <table>
      <tbody>
        <% @notifications.each do |notification| -%>
          <tr id="<%= notification.anchor %>">
            <%= render :partial => "notifications/#{notification.class.name.underscore}", :locals => {:notification => notification} %>
            <td class="last">
              <%= link_to '删除', notification_path(notification), :method => :delete, :remote => true, :class => 'label delete' %>
            </td>
          </tr>
        <% end -%>
      </tbody>
    </table>
    <%= will_paginate1 @notifications %>
  </div>
</div>
