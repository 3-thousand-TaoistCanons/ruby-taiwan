<div id="cpanel_site" class="form">

<%= simple_form_for([:cpanel,@site], :wrapper => :inline ) do |f| %>
  <%= render "/shared/error_messages", :target => @site  %>
  <fieldset>
    <legend><%= t("common.edit") %></legend>
      <%= f.input :name %>
      <%= f.input :url %>
      <%= f.input :favicon %>
      <%= f.input :desc %>
      <%= f.input :site_node_id, :collection => SiteNode.all.collect { |t| [t.name,t.id] } %>
      <div class="actions">
      <%= f.submit t("common.save"), :class => "btn primary" %> or <%= link_to t("common.cancel"), cpanel_sites_path %>
    </div>
  </fieldset>
<% end %>
</div>